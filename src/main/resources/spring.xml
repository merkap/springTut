<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" name="client" class="org.example.springTut.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Jo"/>
    </bean>


    <bean id="app" class="org.example.springTut.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventlogger"/>
        <constructor-arg ref="event"/>
    </bean>

    <bean id="event" class="org.example.springTut.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateInstance"/>

    <bean id="eventlogger" class="org.example.springTut.ConsoleEventLogger"/>


</beans>